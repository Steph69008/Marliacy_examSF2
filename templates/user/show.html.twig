{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>Le membre en détail</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ user.picture }}</td>
            </tr>
            <tr>
                <th>Secteur</th>
                <td>{{ user.sector }}</td>
            </tr>
            <tr>
                <th>Contrat</th>
                <td>{{ user.contract }}</td>
            </tr>
            <tr>
                <th>Date de fin de contrat</th>
                <td>{{ user.releaseDate ? user.releaseDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}">Retour à la liste</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}">Modification</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
